<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"  >

    <solid android:color="#ffffff" />

    <!-- 设置边框的颜色和宽度 -->
    <stroke
        android:width="1dp"
        android:color="#DEDEDE" />

    <!--设置圆角-->
    <corners android:radius="8dp" />

    <!--设置padding值-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</shape>