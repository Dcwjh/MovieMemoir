<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dahao"
    android:paddingRight="@dimen/dahao"
    android:focusable="false"
   >
<!--  horizontal  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mma_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="40"
            android:scaleType="centerInside"
            android:background="@drawable/image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dahao">

            <TextView
                android:layout_marginTop="@dimen/big"
                android:id="@+id/mma_moviename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="moviename"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_marginLeft="@dimen/little"
                android:id="@+id/mma_releasedate"
                android:layout_marginTop="@dimen/big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="release date: 2018-12-12"
                android:textSize="14sp"
                android:textColor="@color/colorselcet"/>
            <TextView
                android:layout_marginLeft="@dimen/little"
                android:id="@+id/mma_watchdate"
                android:layout_marginTop="@dimen/little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="watch date: 2018-12-12"
                android:textSize="14sp"
                android:textColor="@color/colorselcet"/>
            <TextView
                android:layout_marginLeft="@dimen/little"
                android:id="@+id/mma_poscode"
                android:layout_marginTop="@dimen/little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="poscode: 1234"
                android:textSize="14sp"
                android:textColor="@color/colorselcet"/>
                <RatingBar
                    android:id="@+id/mma_ratingbar"
                    android:layout_marginTop="@dimen/little"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/colorYellow"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:rating="5"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_marginTop="@dimen/little">
        <TextView
            android:id="@+id/mma_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Comment:  djfioas asdh skd df a sdfec ec c ew df sd fas dfe  e  df asd  qwe fa sdf aw ef s df w  sd g w"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:maxLines="2"
            android:minLines="2"
            android:maxEms="30"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>